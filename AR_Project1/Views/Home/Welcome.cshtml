
<div class="container widget center" id="div-welcome">
    <div class="blur"></div>

    <div class="image-container center text-center">
        <img id="welcome-logo" class="img-responsive img-circle" src="~/img/Welcome/logo-white.jpg" alt="Alternate Text" />
        <h2 id="logo-alt">AGRO REPUBLIC</h2>
        <br />
        <a asp-controller="Home" asp-action="Main" class="btn green" id="btn-home">去主页看看</a>
    </div>
</div>

@section Styles{
    <style>
        body {
            background: url('/img/Welcome/welcome-yellow-field.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .blur {
            background: url('/img/Welcome/welcome-yellow-field.jpg') no-repeat center center fixed;
            background-size: cover;
            overflow: hidden;
            filter: blur(8px);
            position: absolute;
            height: 900px;
            top: -5px;
            left: -5px;
            right: -5px;
            bottom: -5px;
        }

        .widget {
            border-top: 2px solid rgba(255, 255, 255, .5);
            border-bottom: 2px solid rgba(255, 255, 255, .5);
            height: 100px;
            width: 100%;
            overflow: hidden;
            position: center;
        }

        .center {
            position: absolute;
            margin: auto;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
        }

        /*  NOT REQUIRED  */

        .image-container {
            height: 420px;
            width: 200px;
        }

            .image-container img {
                text-align: center;
                text-shadow: 1px 1px rgba(0, 0, 0, .1);
                color: #ffffff;
                margin-top: 20px;
                /*font-family: 'Lora', serif;*/
                font-weight: 700;
                font-size: 38px;
            }
    </style>

    <!-- For welcome page button -->
    <style>
        /* css for welcome buttons */
        #btn-home {
            cursor: pointer;
            margin-top: 30px;
            border-radius: 5px;
            text-decoration: none;
            padding: 10px;
            font-size: 20px;
            transition: .3s;
            -webkit-transition: .3s;
            -moz-transition: .3s;
            -o-transition: .3s;
            display: inline-block;
        }

        #btn-home {
            color: #fff;
            border: 3px #fff solid;
        }

            #btn-home :hover {
                color: #fff;
                background-color: #fff;
            }
    </style>

    <style>
        /* css for logo */
        #welcome-logo {
            animation-duration: 2s;
        }

        #logo-alt {
            color: #fff;
        }
    </style>
}

@section Scripts{
    <script>
        // hide elements
        $('#scale-navbar').hide();
        $('#logo-alt').hide();

        var buttonInter = setInterval(function () {
            $('#btn-home').toggleClass("animated bounceIn");
        }, 1800);

        var logoInter = setInterval(function () {
            $('#welcome-logo').addClass("animated jackInTheBox");
        }, 1800);

        $('#btn-home').hide();
        $('#welcome-logo').hide();

        $('.widget').animate({
            height: "600px"
        }, 2500, function () {
            $('#welcome-logo').show();

            setTimeout(function () {
                $('#logo-alt').show();
            }, 800);

            setTimeout(function () {
                $('#btn-home').show();
            }, 1000);
        });

        // set interval for toggling class when hover off, pause interval when hover
        $('#btn-home').hover(function (e) {
            clearInterval(buttonInter);
            $('#btn-home').removeClass("animated bounceIn");
        }, function (e) {
            buttonInter = setInterval(function () {
                $('#btn-home').toggleClass("animated bounceIn");
            }, 1800);
        });
    </script>

    <script>
        $('#section-nav').hide();
    </script>
}
